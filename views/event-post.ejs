<%- include('header') %>

<%- include('nav') %>

<div class="mt-3" style="overflow: hidden;">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fa fa-connectdevelop"></i> Post an event
      </h1>
      
      <form action='#' method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Event Name</label>
          <input
            type="name"
            id="name"
            name="eventname"
            class="form-control"
            placeholder="Enter Name"
          />
        </div>
        <div class="form-group">
            <label for="email">Date and Time</label>
            <input
              type="datetime-local"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Time"
            />
        </div>
        <div class="form-group">
            <label for="email">Upload Image</label>
            <input
              type="file"
              name="upload_img"
              class="form-control"
            />
        </div>
        <div class="form-group">
            <label for="password">Desctiption</label>
            <textarea class="form-control" name="description" cols="10" rows="10"></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary btn-block">
              Post
            </button>
        </form>
    </div>
    </div>
  </div>

  <%- include('footer') %>