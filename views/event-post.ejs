<%- include('header') %>

<%- include('nav') %>

<div class="mt-3" style="overflow: hidden;">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fa fa-connectdevelop"></i> Post an <a href="/events" class="text-primary">EVENT</a>
      </h1>

      <a href="/dashboard" class="btn btn-outline-primary mt-2 mb-2">Back to Dashboard</a>

      <%- include ('partials/messages') %>

      <% if(typeof event != 'undefined'){ %>
          <form action='/admin/event-post/<%= event.id %>' method="POST" enctype="multipart/form-data">
            <div class="
            form-group">
              <label for="name">Event Name</label>
              <input
                type="name"
                id="name"
                name="eventname"
                class="form-control"
                placeholder="Enter Name"
                value="<%= event.eventName %>"
              />
            </div>
            <div class="form-group">
                <label for="dateandtime">Date and Time</label>
                <input
                  type="datetime-local"
                  id="dateandtime"
                  name="dateandtime"
                  class="form-control"
                  placeholder="Enter Date and Time"
                />
            </div>
            <div class="form-group">
                <label for="email">Upload Image</label>
                <input
                  type="file"
                  name="uploaded_img"
                  class="form-control"
                />
            </div>
            <div class="form-group">
                <label for="password">Description</label>
                <textarea class="form-control" name="description" cols="10" rows="10">
                  <%= event.description %>
                </textarea>
              </div>
              
              <button type="submit" class="btn btn-primary btn-block">
                  Post
                </button>
            </form>
      <% }else{ %>
        <form action='/admin/event-post' method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="name">Event Name</label>
            <input
              type="name"
              id="name"
              name="eventname"
              class="form-control"
              placeholder="Enter Name"
            />
          </div>
          <div class="form-group">
              <label for="date">Date and Time</label>
              <input
                type="datetime-local"
                name="dateandtime"
                class="form-control"
                placeholder="Enter Time"
                id="date"
                value="<%= event.date %>"
              />
          </div>
          <div class="form-group">
              <label for="default-img">
                <img src="../img/events/<%= event.imageName %>" alt="">
              </label>
              <label>Upload Image</label>
              <input
                type="file"
                id="default-img"
                name="uploaded_img"
                class="form-control"
              />
          </div>
          <div class="form-group">
              <label for="password">Desctiption</label>
              <textarea class="form-control" name="description" cols="10" rows="10">
              </textarea>
            </div>
            
            <button type="submit" class="btn btn-primary btn-block">
                Post
              </button>
          </form>
      <% } %>
      
      
    </div>
    </div>
  </div>


