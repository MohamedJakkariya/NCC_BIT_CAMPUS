<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event panel</title>

    <!-- link stylesheets -->
    <link rel="stylesheet" href="../lib/bootstrap/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="../lib/font-awesome/css/font-awesome.min.css"
    />

    <!-- custome stylesheet  -->
    <link rel="stylesheet" href="../css/event.css" />
    <link rel="stylesheet" href="../css/style.css" />

    <!-- slick theme  -->
    <link rel="stylesheet" href="../lib/slick-master/slick/slick.css" />
    <link rel="stylesheet" href="../lib/slick-master/slick/slick-theme.css" />

    <!-- loading animation plugin  -->
    <link rel="stylesheet" href="../lib/loading-plugin/waitMe.min.css" />
    <style>
      .slick-slide {
        transition: all ease-in-out 0.3s;
        opacity: 0.2;
      }

      .slick-active {
        opacity: 0.5;
        transform: scale(0.8);
      }

      .slick-current {
        opacity: 1;
        transform: scale(1);
      }
      .row .box img {
        width: 100%;
        height: auto;
      }

      .btn-outline-light {
        display: block;
        margin: 0.9rem auto;
      }

      p,
      h4 {
        text-align: center;
      }

      .event-slide {
        overflow-x: hidden;
      }

      .event-slide img {
        width: 450px;
        height: 350px;
        position: relative;
      }

      .event-slide .box-info p-2 p {
        padding: 0;
        margin: 0.3rem;
      }

      .box {
        position: relative;
      }

      .box-info {
        position: absolute;
        bottom: 0;
        width: 450px;
        z-index: 1;
        background-color: rgba(52, 58, 64, 0.8);
      }

      @media only screen and (max-width: 600px) {
        .event-slide img {
          width: 100%;
          height: 300px;
        }

        p,
        h4 {
          text-align: left;
        }

        .btn-outline-light {
          margin: 0.8rem;
        }

        .box-info {
          height: 140px;
        }
      }
    </style>
  </head>
  <body class="waitMe_body">
    <!-- Loading animation  -->
    <div class="waitMe_container img" style="background: #fff;">
      <div style="background: url('../lib/loading-plugin/img.svg');"></div>
    </div>

    <%- include('nav') %>

    <h1 class="text-center p-4">All Events</h1>

    <% if(typeof events != 'undefined'){ %>
    <div class="event-slide">
      <% events.forEach(event => { %>
      <div class="box">
        <img src="../img/events/<%= event.imageName %>" alt="Event image" />
        <div class="box-info p-2">
          <p class="text-white">
            <span class="fa fa-calendar p-2"></span> <%= event.date.toLocaleString() %>
          </p>
          <h4 class="text-white p-0"><%= event.eventName %></h4>
          <button
            data-toggle="modal"
            data-target="#<%= event.id %>"
            class="btn btn-outline-light"
          >
            View Detail
          </button>
        </div>
      </div>
      <% }) %>
    </div>

    <!-- Event Description  -->
    <% events.forEach(event => { %>
    <div
      class="modal fade"
      id="<%= event.id %>"
      tabindex="-1"
      role="dialog"
      aria-labelledby="<%= event.id %>"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="<%= event.id %>"><%= event.eventName %></h5>
            <button
              type="button"
              class="close"
              data-dismiss="<%= event.id %>"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= event.description %>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <% }) %> 

    <% }else{ %>
      <h2 class="text-danger">Currently No Events available!</h2>
    <% } %>

    <!-- Script Links  -->
    <script src="../lib/jquery/jquery.min.js"></script>
    <script src="../lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="../lib/slick-master/slick/slick.min.js"></script>
    <script src="../lib/loading-plugin/waitMe.min.js"></script>
    <script>
      $(document).ready(function () {
        $('.event-slide').slick({
          autoplay: true,
          speed: 1000,
          centerMode: true,
          slidesToShow: 3,
          infinite: true,
          swipeToSlide: true,
          responsive: [
            {
              breakpoint: 600,
              settings: {
                arrows: true,
                slidesToShow: 1,
                centerMode: false,
                dots: true,
              },
            },
          ],
        });
      });
    </script>
  </body>
</html>
